# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#tasks of receptionPatient


GET		/receptionPatient/create					controllers.Application.createPatient()
GET 	/receptionPatient/saveCreatePatient			controllers.Application.saveCreatePatient()
GET		/receptionPatient/printListPatient			controllers.Application.printListPatient()
POST	/receptionPatient/saveUpdatePatient			controllers.Application.saveUpdatePatient()
GET	    /receptionPatient/searchPatient				controllers.Application.searchPatient()
POST	/receptionPatient/:id/printRecieptPatient	controllers.Application.printRecieptPatient(id: Integer)
POST	/receptionPatient/:id/updatePatient			controllers.Application.updatePatient(id: Integer)	
POST	/receptionPatient/:id/deletePatient			controllers.Application.deletePatient(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
