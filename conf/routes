# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# Tasks          
GET     /rgister                  controllers.Application.rgister()
POST    /rgister                  controllers.Application.newRgister()
GET    /rgister/:id/delete       controllers.Application.deleteRgisterDrug(id: Long)
GET    /rgister/:id/edit       controllers.Application.editeRgisterDrug(id: Long)
